
<form class="form-signin">
  <h2 class="form-signin-heading">Login</h2>
  {{input type="text" value=username class="form-control" name="username" placeholder="Email Address" required="" autofocus=""}}
  {{input type="password" value=password class="form-control" name="password" placeholder="Password" required=""}}
  <br>
  <button class="btn btn-lg btn-primary btn-block" type="submit" {{action 'authenticate' username password}}>Login</button>
</form>
